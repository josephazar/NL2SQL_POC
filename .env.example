# Azure OpenAI Configuration
# Get your credentials from Azure Portal: https://portal.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Database Configuration
DATABASE_PATH=data/churn.db

# ChromaDB Configuration
CHROMADB_PATH=data/chromadb
CHROMADB_COLLECTION_TABLES=nl2sql_tables
CHROMADB_COLLECTION_QUERIES=nl2sql_queries

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO


# RAG Configuration (Retrieval-Augmented Generation)
RAG_TOP_K_TABLES=20          # Number of similar tables to retrieve for context
RAG_TOP_K_QUERIES=30         # Number of similar example queries to retrieve

# Result Synthesis Configuration
SYNTHESIS_MAX_ROWS=150       # Maximum rows to send to LLM for synthesis
